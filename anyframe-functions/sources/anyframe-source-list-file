# anyframe-source-list-file
# or
# anyframe-source-list-file "$BUFFER"

local dir="$PWD"
local buffer="$1"
buffer="$(echo $buffer | sed 's/^  *//' | sed 's/  *$//')"

if [[ -n "$buffer" ]]; then
  local dir="${buffer##* }"
fi

ls -- "$dir"

