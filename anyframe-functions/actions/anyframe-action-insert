function _anyframe-action-insert()
{
  if zle; then
    LBUFFER+="$*"
    CURSOR=$#LBUFFER
    # redisplay the command line
    zle -R -c
  fi
}

local selected_item="$(cat)"
if [[ -z "$selected_item" ]]; then
  return 1
fi

_anyframe-action-insert "$@" "$selected_item"

