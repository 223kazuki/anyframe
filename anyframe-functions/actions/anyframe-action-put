function _anyframe-action-put()
{
  if zle; then
    BUFFER="$*"
    CURSOR=$#BUFFER
    # redisplay the command line
    zle -R -c
  fi
}

local selected_item="$(cat)"
if [[ -z "$selected_item" ]]; then
  return 1
fi

_anyframe-action-put "$@" "$selected_item"

# Local Variables:
# mode: Shell-Script
# End:
# vim: ft=zsh
